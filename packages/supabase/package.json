{
  "name": "@plop/supabase",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "dev": "supabase start",
    "login": "supabase login",
    "migration:create": "supabase db diff",
    "migrate": "supabase migration up",
    "seed": "supabase db seed generate && supabase db seed run",
    "reset": "supabase db reset",
    "generate": "supabase gen types --lang=typescript --local --schema public > src/types/db.ts",
    "lint": "biome check .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@plop/logger": "workspace:*",
    "@supabase/ssr": "^0.8.0",
    "react": "19.2.3",
    "server-only": "^0.0.1",
    "supabase": "^2.67.2"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "next": "16.1.0",
    "typescript": "^5.9.3"
  },
  "exports": {
    "./server": "./src/clients/server.ts",
    "./client": "./src/clients/client.ts",
    "./job": "./src/clients/job.ts",
    "./api": "./src/clients/api.ts",
    "./mutations": "./src/mutations/index.ts",
    "./middleware": "./src/clients/middleware.ts",
    "./queries": "./src/queries/index.ts",
    "./types": "./src/types/index.ts"
  }
