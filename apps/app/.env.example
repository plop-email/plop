# Copy to .env.local for local dev (Next.js loads .env.local).
# Local defaults are included; replace CHANGEME_* values and prod URLs when deploying.

# API
NEXT_PUBLIC_API_URL=http://localhost:3003 # local; prod: https://api.plop.email

# Supabase (required)
# Local Supabase defaults (from `supabase status -o env`)
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321 # local Supabase
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_ACJWlzQHlZjBrEguHvfOxg_3BJgxAaH # local publishable key
SUPABASE_SECRET_KEY=sb_secret_N7UND0UgjKTVK-Uodkm0Hg_xSvEMPvz # local secret key

# Email (required for sending emails)
RESEND_API_KEY=CHANGEME_RESEND_API_KEY

# Upstash (required by env schema)
UPSTASH_REDIS_REST_URL=https://example.com # prod: real Upstash URL
UPSTASH_REDIS_REST_TOKEN=local-dev-token # prod: real Upstash token

# Analytics (required by env schema)
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=local-dev-openpanel-client
OPENPANEL_SECRET_KEY=local-dev-openpanel-secret

# Observability (optional)
NEXT_PUBLIC_SENTRY_DSN=

# Runtime
PORT=3000 # local dev port
VERCEL_URL= # prod only; Vercel sets automatically

# Validation (optional)
SKIP_ENV_VALIDATION=false # set true to bypass local env validation
