# Copy to .env.local for local dev.
# Wrangler reads .dev.vars for `wrangler dev` and secrets via `wrangler secret` in prod.
# Local defaults are included; replace prod values when deploying.

# Admin auth
ADMIN_TOKEN=local-admin-token # set a strong token in prod

# Cloudflare (required for admin endpoints)
CLOUDFLARE_API_TOKEN=CHANGEME_CLOUDFLARE_API_TOKEN
CLOUDFLARE_ZONE_ID=CHANGEME_CLOUDFLARE_ZONE_ID

# Email routing
EMAIL_DOMAIN=in.plop.email # local/prod default
EMAIL_WORKER_NAME=plop-inbox # prod worker name

# Webhook
WEBHOOK_URL=http://localhost:3003/webhooks/inbox # local; prod: https://api.plop.email/webhooks/inbox
WEBHOOK_AUTH_TOKEN=CHANGEME_WEBHOOK_AUTH_TOKEN # must match apps/api INBOX_WEBHOOK_SECRET
WEBHOOK_TIMEOUT_MS=10000 # optional override

# R2 storage binding (set in wrangler.toml, not here)
INBOX_STORAGE=
