# Copy to .env.local for local dev (Next.js loads .env.local).
# Local defaults are included; replace prod URLs when deploying.

# Site
NEXT_PUBLIC_SITE_URL=http://localhost:3001 # local; prod: https://plop.email
NEXT_PUBLIC_APP_URL=http://localhost:3000 # local; prod: https://app.plop.email

# Loops (newsletter)
NEXT_PUBLIC_LOOPS_FORM_ID= # prod only

# OpenPanel
NEXT_PUBLIC_OPENPANEL_CLIENT_ID=local-dev-openpanel-client # prod: real client id
OPENPANEL_SECRET_KEY=local-dev-openpanel-secret # prod: real secret

# Cal.com
NEXT_PUBLIC_CAL_LINK= # prod only
